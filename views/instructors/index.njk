{% extends "layout.njk" %}

{% block content %}
  <div class="card table-container">
    <table width="100%">
      <thead>
        <tr>
          <th>Instructor</th>
          <th>Atendimento</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
      {% for instructor in instructors %}
        <tr>
          <td>{{instructor.name}}</td>
          <td>{{instructor.services}}</td>
          <td><a href="/instructors/{{instructor.id}}">Ver</a></td>
        </tr>
      {% endfor %}
         
      </tbody>
    </table>
  </div>

{% endblock content %}